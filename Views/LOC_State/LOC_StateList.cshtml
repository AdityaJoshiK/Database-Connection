@{
    ViewData["Title"] = "LOC_StateList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data
@model DataTable

<div class="col-md-12">
    <div class="row">
        <div class="col-md-10">
            <h3>State List</h3>
        </div>
        <div class="col-md-2">
            <a asp-controller="LOC_State" asp-action="Add" class="btn btn-primary btn-sm pull-right">Add State</a>
        </div>
    </div>
</div>

<table class="table table-responsive table-sm">
    <thead>
        <tr>
            @*<th>State ID</th>*@
            <th>Country Name</th>
            <th>State Name</th>
            <th>State Code</th>
            <th>Created</th>
            <th>Modified</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (DataRow dr in Model.Rows)
        {
            <tr>
                <td>@dr["CountryName"]</td>
                @*<td>@dr["StateID"]</td>*@
                <td>@dr["StateName"]</td>
                <td>@dr["StateCode"]</td>
                <td>@dr["CreationDate"]</td>
                <td>@dr["ModificationDate"]</td>
            <td>
                    <form method="post">
                        <input type="hidden" name="StateID" value="@Convert.ToInt32(dr["StateID"].ToString())" />
                        <button class="btn btn-danger" type="submit" asp-controller="LOC_State" asp-action="Delete">Delete</button>
                        <button class="btn btn-success" type="submit" asp-controller="LOC_State" asp-action="Add">Edit</button>
                    </form>
            </td>
            </tr>
        }
    </tbody>
</table>
